<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9e9d3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DialogStartConvo" >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
         android:layout_marginTop="31dp"
        android:gravity="center"
        android:text="Do you want to start the conversation?"
        android:textColor="#5a9965"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:src="@drawable/gesture" />

    <ImageButton
        android:id="@+id/no_btn"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:layout_below="@+id/yes_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/customize_no_btn" />

    <ImageButton
        android:id="@+id/yes_btn"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/no_btn"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="45dp"
        android:src="@drawable/customize_yes_btn" />

</RelativeLayout>