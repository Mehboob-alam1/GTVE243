<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#c9e9d3"
    
    tools:context=".StartConversation" >

    <TextView
        android:id="@+id/text_display"
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:background="@layout/rounded_border_textview"
        android:gravity="center"
        android:padding="10dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#5a9965" />

    <ImageButton
        android:id="@+id/text_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/speaker_btn"
        android:layout_centerVertical="true"
        android:background="@drawable/round_corner"
        android:contentDescription="@null"
        android:src="@drawable/convo_on_btn" />

    <ImageButton
        android:id="@+id/speaker_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/text_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/round_corner"
        android:contentDescription="@null"
        android:src="@drawable/custom_speaker_btn" />

    <TextView
        android:id="@+id/txtArduino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/speaker_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@null"
         android:gravity="center"
         android:textColor="#5a9965" />

</RelativeLayout>